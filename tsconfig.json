{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["ES2021", "DOM"],
        "rootDir": "./src",
        "target": "es2016",
        "module": "CommonJS",
        "strict": true,
        "typeRoots": ["node_modules/@types", "./src/types/custom.d.ts"],
        "esModuleInterop": true, 
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "typedocOptions" : {
        "entryPoints" : ["src/**/*.ts"],
        "out": "docs"
      }
  }